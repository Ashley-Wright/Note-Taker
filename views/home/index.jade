extends ../template/layout

block content
  .welcome
    .pure-g-r
      .pure-u-2-5
      .pure-u-1-5
        form.pure-form.pure-form-stacked#sign-in-form
          fieldset
            legend Sign-in

            label(for="username") Username:
            input#sign-in-username(type="text")

            label(for="password") Password:
            input#sign-in-password(type="password")

            button.pure-button.pure-button-primary(type="submit") Sign-in

            p Don't have an account?
            a#register-link(href='#') Register
      .pure-u-2-5
    .pure-g-r
      .pure-u-2-5
      .pure-u-1-5
        form.pure-form.pure-form-stacked.hidden#register-form(action='/', method='post')
          fieldset
            legend Register

            p#register-error.hidden

            label(for="username") Username:
            input#register-username(type="text")

            label(for="password") Password:
            input#register-password1(type="password")

            label(for="password2") Retype Password:
            input#register-password2(type="password")

            button.pure-button.pure-button-primary(type="submit") Register
      .pure-u-2-5