#source-show(class = currentSource ? '' : 'hidden')
  .pure-g-r#source-show-heading
    .pure-u-1-2
      .pure-u-1-2
        if(currentSource)
          h2= currentSource.title
      .pure-u-1-2
        button.pure-button#add-note Add Note
        button.pure-button#search Search
    .pure-u-1-2
      #source-menu
        a edit
        a delete
  .pure-g-r
    .pure-u-1
      if(notes)
        ul#source-show-notes
          each note in notes
            li(data-id= note._id)
              .notes
                h3= note.title
                p= note.content

