.contain-to-grid
  nav.top-bar
    ul.title-area
      li.name
        h1: a(href="/") Home
      li.toggle-topbar.menu-icon
        a(href="#")
          span Menu

    section.top-bar-section
      ul.left
      ul.right
        li.divider
        if(user)
          li.has-form: a#sign-in-button.button.radius.alert(href="#", data-name = 'user.name')= user.name
        else
          li.has-form: a#sign-in-button.button.radius(href="#", data-name = 'guest') Sign In